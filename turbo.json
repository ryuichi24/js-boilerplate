{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [],
  "tasks": {
    "lint": {},
    "format": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@js-boilerplate/desktop-builder#build:publish": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "@js-boilerplate/desktop-builder#build:local": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
